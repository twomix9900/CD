<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Page Title</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script type="text/javascript" src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
</head>
<body>
  <script>
    $(document).ready(function(){
      var socket = io();
      socket.on('initColor', function (data) {
        $('.body').css('background-color', data.color)
      })

      socket.on('updated_color', function (data) {
        $('.body').css('background-color', data.color)
      })

      $('form').submit(function () {
        return false;
      })
      
      $('button.green').click(function (e) {
        socket.emit('green', {
          color: 'green',
        });
      })

      $('button.blue').click(function (e) {
        socket.emit('blue', {
          color: 'blue',
        });
      })

      $('button.pink').click(function (e) {
        socket.emit('pink', {
          color: 'pink',
        });
      })
    });
  </script>
<div class="body">
  <div class="container">
    <form>
      <button class="btn-large waves-effect waves-light green" type="submit">
        Green
      </button>
    </form>
    <form>
      <button class="btn-large waves-effect waves-light blue" type="submit">
        Blue
      </button>
    </form>
    <form>
      <button class="btn-large waves-effect waves-light pink" type="submit">
        Pink
      </button>
    </form>
  </div>
</div>
</body>
</html>