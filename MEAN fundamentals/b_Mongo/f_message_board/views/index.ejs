<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Message Board</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
</head>
<body>
  <script>
    $(document).ready(function(){
      console.log('hello')
    });
  </script>
<div class="body">
  <div class="container">
    <h1>Message Board</h1>
    <form method="POST" action="/add_message/">
      <input type="text" name="name" placeholder="name">
      <input type="text" name="message" placeholder="message">
      <input type="submit" value="Post Message">
    </form>
    
    <div class="messages" style="margin-top: 50px;">
      <h6>Messages</h6>
      <% for (var i = 0; i < messages.length; i++) { %>
        <div>
          <h3>Name: <%= messages[i].name %></h3>
          <h3>Message: <%= messages[i].message %></h3>
          <% for (var j = 0; j < messages[i].comments.length; j++) { %>
            <div style="margin-left: 100px;">
              <h5>Name: <%= messages[i].comments[j].name %></h5>
              <h5>Message: <%= messages[i].comments[j].message %></h5>
            </div>
          <% } %>
          <form method="POST" action="/add_comment/<%= messages[i]._id %>/" style="width: 500px; margin-left: 100px;">
            <input type="text" name="name" placeholder="name">
            <input type="text" name="message" placeholder="comment">
            <input type="submit" value="Post Comment">
          </form>
        </div>
      <% } %>
    </div>
  </div>
</div>
</body>
</html>